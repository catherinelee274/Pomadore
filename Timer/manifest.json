{
  "manifest_version": 2,

  "name": "Pomadore",
  "description": "Pomodoro Timer.",
  "version": "1.0",

  "permissions": [ 
    "alarms"
  ],

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}